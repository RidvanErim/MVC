@model List<BookType>

<h3 class="text-center">Kitap Türü Listeleme Sayfası</h3>
<a asp-controller="BookType" asp-action="Create" class="btn btn-primary mb-2" style="float:right;">Yeni Ekle</a>


<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Aksiyon</th>
    </tr>

    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i+1)</td>
            <td>@Model[i].Name</td>
            <td>
            <a asp-controller="Booktype" asp-action="Edit" asp-route-id="@Model[i].Id"> <i class="bi bi-pencil-square"></i> </a> 
             <a asp-controller="BookType" asp-action="Delete" asp-route-id="@Model[i].Id">  <i class="bi bi-trash3"></i>  </a> 
            </td>
        </tr>

    }
  
</table>